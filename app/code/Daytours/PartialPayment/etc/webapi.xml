<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/partialpayment/orders" method="GET">
        <service class="Daytours\PartialPayment\Api\PartialPaymentRepositoryInterface" method="getOrderById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/partialpayment/orders" method="POST">
        <service class="Daytours\PartialPayment\Api\PartialPaymentRepositoryInterface" method="payDueAmount"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>