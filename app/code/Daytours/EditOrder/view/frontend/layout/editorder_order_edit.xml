<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Edit Order</title>
        <css src="Magebay_Bookingsystem::css/daterangepicker.css" />
    </head>
    <body>

        <attribute name="class" value="edit-order-page" />

        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Please complete your order.</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Daytours\EditOrder\Block\Form" name="editorder.form" as="editorder_from" template="Daytours_EditOrder::form.phtml" />
        </referenceContainer>

        <referenceContainer name="sidebar.main" remove="true" />
        <referenceContainer name="div.sidebar.additional" remove="true" />
        <referenceContainer name="header.panel" remove="true" />
        <referenceBlock name="navigation.sections" remove="true" />
        <referenceBlock name="top.search" remove="true" />
    </body>
</page>
