			<!--<block class="Daytours\Wordpress\Block\RecentArticles" name="sidebar.recent"  template="Daytours_Wordpress::list-recent-articles.phtml" before="-"/>-->
			<!--<block class="FishPig\WordPress\Block\Sidebar\Widget\Cloud" name="sidebar.tags"  template="FishPig_WordPress::sidebar/widget/cloud.phtml" after="sidebar.recent"/>-->
			<!--<block class="FishPig\WordPress\Block\Sidebar\Widget\Search" name="search.sidebar.bloc"  after="sidebar.tags"/>-->
		</referenceContainer>
		<referenceBlock name="page.main.title" remove="true" />
	</body>
</page>